<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ChatApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Streamchat"
        android:usesCleartextTraffic="true">

        <!-- SplashActivity is now the LAUNCHER -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity is no longer the launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <activity android:name="com.example.streamchat.CreateGroupActivity"
            android:exported="false" />
        <activity
            android:name=".FirebaseAuthActivity"
            android:exported="false" />
        <activity
            android:name=".ChannelListActivity"
            android:exported="false" />
        <activity
            android:name=".MessageListActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".FriendListActivity"
            android:exported="false" />
        
        <!-- Event Creation Activity -->
        <activity
            android:name=".CreateEventActivity"
            android:exported="false" />
        
        <!-- Event Details Activity -->
        <activity
            android:name=".EventDetailsActivity"
            android:exported="false" />
        
        <!-- Event Join Activity (Deep Link Handler) -->
        <activity
            android:name=".EventJoinActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="temp"
                    android:host="event" />
            </intent-filter>
        </activity>
    </application>

</manifest>